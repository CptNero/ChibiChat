  </servlet>

  <servlet-mapping>
    <servlet-name>MessageServlet</servlet-name>
    <url-pattern>/message</url-pattern>
  </servlet-mapping>
  <!--chat /-->

  <!-- Welcome /-->
    <servlet>
      <servlet-name>WelcomeServlet</servlet-name>
      <jsp-file>/welcome.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
      <servlet-name>WelcomeServlet</servlet-name>
      <url-pattern>/</url-pattern>
    </servlet-mapping>
  <!-- Welcome /-->

</web-app>
